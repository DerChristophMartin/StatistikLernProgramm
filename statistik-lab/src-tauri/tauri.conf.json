{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "statistik-lab",
  "version": "0.1.0",
  "identifier": "com.statistiklab.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "statistik-lab",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ],
    "category": "Education",
    "shortDescription": "Interaktiv Statistik lernen",
    "longDescription": "StatistikLab ist eine Desktop-Anwendung zum interaktiven Erlernen von Statistik mit ausf√ºhrbarem Python-Code."
  }
}
